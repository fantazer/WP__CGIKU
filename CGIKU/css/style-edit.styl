.menu__list
	padding: 0
	a
		padding: 0
		text-transform: initial
		text-align: left
	.sub-menu
		padding-left: 20px
		width: 100%
		position: static
		display: block

.table
	min-width 290px
	display: block
	overflow: auto

.content
	margin-bottom: 80px

.section--doc
	h3
		padding: 20px
		background: #f7f7f7
		margin-bottom: 20px
		font-size: 16px
	p
		margin-bottom: 20px

.about
	background-color: #efeeee

.article__el
	padding: 20px
	margin-bottom: 20px
	border-raius 10px
	box-shadow 0px 2px 5px #f4f4f4
	display: block

.article__title
	font-size: 18px
	color black
	font-weight:bold

.article__text
	margin-top: 20px
	line-height: 1.6

.nav-links
	margin: 20px 0

.page-numbers
	padding: 10px
	border 1px solid #cccccc
	display: inline-block

.page-numbers.current
	border 1px solid black

.questions-items
	padding: 20px
	margin-bottom: 20px
	border-raius 10px
	box-shadow 0px 2px 5px #f4f4f4
	display: block

.questions-items__name
	font-size: 18px
	color black
	font-weight:bold
	margin-bottom: 20px

.questions-items__title
	margin-bottom: 20px
	color black
	font-style italic
	line-height: 1.6

.questions-items__text
	line-height: 1.6

.footer-list__menu
	list-style none
	padding-left: 0
	display: block
	display: flex
	justify-content:space-between
	flex-wrap wrap
	.menu-item
		color black
		width: 30%
		text-transform: uppercase
		margin-bottom: 20px

.footer-info
	border-top:1px solid #f3f2f2

@media only screen and (max-width: 768px)
	.content
		margin-bottom: 30px
@media only screen and (max-width: 640px)
	.footer-list__menu
		display: none